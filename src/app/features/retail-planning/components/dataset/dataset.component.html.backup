<div id="content-dataset" class="tab-content min-h-screen relative">
  <!-- Top Dataset Menu Bar -->
  <div *ngIf="timelineWarehouses.length > 0" class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-full overflow-x-auto">
      <div class="flex items-center gap-1 px-4 py-3 min-w-max">
        <!-- Dataset Menu Items -->
        <div *ngFor="let dataset of datasets; trackBy: trackByDatasetId"
             (click)="viewDataset(dataset)"
             class="group relative flex items-center gap-3 px-4 py-2 rounded-lg cursor-pointer transition-all duration-200 hover:bg-gray-50 min-w-0"
             [ngClass]="{
               'bg-orange-50 border border-orange-200': selectedDatasetForMap?.id === dataset.id,
               'hover:bg-gray-50': selectedDatasetForMap?.id !== dataset.id
             }">

          <!-- Icon -->
          <div class="flex-shrink-0 p-2 rounded-lg transition-all duration-200 group-hover:scale-110"
               [ngClass]="getTypeConfig(dataset.type).bgLight">
            <ng-container [ngSwitch]="dataset.type">
              <svg *ngSwitchCase="'truck'" class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
              </svg>
              <svg *ngSwitchCase="'demand'" class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <svg *ngSwitchCase="'trip'" class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              <svg *ngSwitchCase="'hub'" class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <svg *ngSwitchDefault class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
              </svg>
            </ng-container>
          </div>

          <!-- Content -->
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2">
              <span class="text-sm font-medium text-gray-900 truncate"
                    [ngClass]="{'text-orange-700': selectedDatasetForMap?.id === dataset.id}">
                {{ dataset.name || 'Unnamed' }}
              </span>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium flex-shrink-0"
                    [ngClass]="getTypeConfig(dataset.type).badge">
                {{ getTypeConfig(dataset.type).label }}
              </span>
            </div>
            <div class="text-xs text-gray-500 mt-0.5">
              {{ dataset.records || 0 | number:'1.0-0' }} records
            </div>
          </div>

          <!-- Active Indicator -->
          <div *ngIf="selectedDatasetForMap?.id === dataset.id"
               class="flex-shrink-0 w-2 h-2 bg-orange-500 rounded-full animate-pulse"></div>
        </div>

        <!-- Loading State -->
        <div *ngIf="loading && datasets.length === 0" class="flex items-center gap-3 px-4 py-2 text-gray-500">
          <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-orange-500"></div>
          <span class="text-sm">Đang tải datasets...</span>
        </div>

        <!-- Empty State -->
        <div *ngIf="!loading && datasets.length === 0 && timelineWarehouses.length > 0"
             class="flex items-center gap-3 px-4 py-2 text-gray-500">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
          </svg>
          <span class="text-sm">Chưa có dataset nào</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Layout - Full width with slide panels -->
  <div class="h-screen flex">
    <!-- Left Sidebar - Warehouses and Timeline -->
    <div class="w-80 bg-white border-r border-gray-200 flex flex-col shadow-lg">
      <!-- Warehouses List -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 flex-shrink-0">
        <!-- Search and Filters -->
        <div class="mb-4 space-y-3">
          <!-- Region Selector and Search on same row -->
          <div class="flex items-center gap-4">
            <!-- Region Selector -->
            <div class="flex items-center gap-2 flex-shrink-0">
              <label class="text-sm text-gray-600 whitespace-nowrap">Vùng:</label>
              <select
                [(ngModel)]="warehouseRegionShortname"
                (change)="onWarehouseRegionChange(warehouseRegionShortname)"
                class="border border-gray-300 rounded-md px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 min-w-[120px]"
              >
                <option *ngFor="let region of availableRegions" [value]="region.code">
                  {{ region.name }} ({{ region.code }})
                </option>
              </select>
            </div>

            <!-- Search Input -->
            <div class="relative flex-1">
              <input
                type="text"
                [(ngModel)]="warehouseSearchQuery"
                (input)="onWarehouseSearchInput($event.target.value)"
                (keyup.enter)="onWarehouseSearch()"
                placeholder="Tìm kiếm bưu cục..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm"
              />
              <svg class="absolute left-3 top-2.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          </div>

        </div>

        <!-- Loading Warehouses -->
        <div *ngIf="loadingWarehouses" class="flex items-center justify-center py-8">
          <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-orange-500"></div>
          <span class="ml-2 text-sm text-gray-600">Đang tải...</span>
        </div>

        <!-- Warehouses Error -->
        <div *ngIf="warehousesError && !loadingWarehouses" class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
          <svg class="w-8 h-8 mx-auto mb-2 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-sm text-red-700">{{ warehousesError }}</p>
        </div>

        <!-- Warehouses List -->
        <div *ngIf="!loadingWarehouses && !warehousesError" class="space-y-2 overflow-y-auto max-h-96">
          <div *ngFor="let warehouse of pagedWarehouses; trackBy: trackByWarehouseId"
               (click)="selectWarehouse(warehouse)"
               [ngClass]="{ 'ring-2 ring-orange-300': isWarehouseSelected(warehouse) }"
               class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer">
            <div class="w-10 h-10 flex items-center justify-center bg-gray-100 rounded-full flex-shrink-0">
              <!-- small icon, using first letter fallback -->
              <svg *ngIf="warehouse.warehouse_type === 'hub'" class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16"></path>
              </svg>
              <svg *ngIf="warehouse.warehouse_type !== 'hub'" class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18"></path>
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between gap-2">
                <div class="truncate">
                  <div class="text-sm font-medium text-gray-900 truncate">{{ warehouse.warehouse_name }}</div>
                  <div class="text-xs text-gray-500 truncate">{{ warehouse.warehouse_address }}</div>
                </div>
                <div class="flex-shrink-0 flex items-center gap-1">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium"
                        [ngClass]="getWarehouseTypeBadgeClass(warehouse.warehouse_type)">
                    {{ warehouse.warehouse_type || '' }}
                  </span>
                  <button
                    (click)="addToTimeline(warehouse); $event.stopPropagation()"
                    [disabled]="isInTimeline(warehouse)"
                    class="inline-flex items-center justify-center w-6 h-6 rounded-full border border-gray-300 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                    title="Thêm vào timeline">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <div class="text-xs text-gray-400 mt-1">ID: {{ warehouse.warehouse_id }} • {{ warehouse.district_name }}, {{ warehouse.province_name }}</div>
            </div>
          </div>
        </div>

        <!-- Empty Warehouses State -->
        <div *ngIf="!loadingWarehouses && !warehousesError && warehouses.length === 0"
             class="text-center py-8 text-gray-500">
          <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          <p class="text-sm">Không có bưu cục nào</p>
        </div>

        <!-- Pagination -->
        <div *ngIf="!loadingWarehouses && !warehousesError && warehouseTotal > warehousePageSize"
             class="mt-4 flex items-center justify-between">
          <div class="text-sm text-gray-600">
            Hiển thị {{ warehouseStartIndex }} -
            {{ warehouseEndIndex }}
            của {{ warehouseTotal }} bưu cục
          </div>
          <div class="flex items-center gap-2">
            <button
              (click)="onWarehousePageChange(warehouseCurrentPage - 1)"
              [disabled]="warehouseCurrentPage === 1"
              class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Trước
            </button>

            <span class="text-sm text-gray-600">
              Trang {{ warehouseCurrentPage }} của {{ warehouseTotalPages }}
            </span>

            <button
              (click)="onWarehousePageChange(warehouseCurrentPage + 1)"
              [disabled]="warehouseCurrentPage === warehouseTotalPages"
              class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Sau
            </button>
          </div>
        </div>
      </div>

      <!-- Timeline Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 flex-shrink-0">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Điểm dừng({{ timelineWarehouses.length }})
          </h3>
          
          <!-- Action Buttons -->
          <div class="flex items-center gap-2" *ngIf="timelineWarehouses.length > 0">
            <button
              (click)="renderRouteOnMap()"
              class="inline-flex items-center gap-2 px-3 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors"
              title="Hiển thị chặng đường trên bản đồ">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              Chặng đường
            </button>
            
            <button
              (click)="viewProductivity()"
              class="inline-flex items-center gap-2 px-3 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors"
              title="Xem sản lượng">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Sản lượng
            </button>
          </div>
        </div>

        <!-- Timeline Component -->
        <div *ngIf="timelineWarehouses.length > 0" class="max-h-64 overflow-y-auto">
          <div class="space-y-2">
            <div *ngFor="let warehouse of timelineWarehouses; let i = index"
                 class="flex items-center gap-3 p-3 bg-blue-50 border border-blue-200 rounded-lg">
              <div class="flex items-center justify-center w-8 h-8 bg-blue-500 rounded-full text-white text-sm font-medium flex-shrink-0">
                {{ i + 1 }}
              </div>
              <div class="flex-1 min-w-0">
                <div class="font-medium text-gray-900 text-sm">{{ warehouse.warehouse_name }}</div>
                <div class="text-xs text-gray-500">{{ warehouse.district_name }}, {{ warehouse.province_name }}</div>
                <div class="text-xs text-gray-400">ID: {{ warehouse.warehouse_id }}</div>
              </div>
              <button
                (click)="removeFromTimeline(warehouse)"
                class="flex-shrink-0 p-1 text-red-500 hover:bg-red-50 rounded transition-colors"
                title="Xóa khỏi timeline">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Empty Timeline State -->
        <div *ngIf="timelineWarehouses.length === 0" class="text-center py-8 text-gray-500">
          <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-sm">Chưa có bưu cục nào trong timeline</p>
          <p class="text-xs text-gray-400 mt-1">Nhấn nút "+" để thêm bưu cục vào timeline</p>
        </div>
      </div>
    </div>

    <!-- Main Content Area - Map with Dataset Slide Panel -->
    <div class="flex-1 relative">
      <!-- Dataset Slide Menu Overlay -->
      <!-- Dataset Slide Panel Toggle Button -->
      <button
        (click)="toggleDatasetPanel()"
        class="absolute top-4 right-4 z-40 bg-white hover:bg-gray-50 border border-gray-300 rounded-lg shadow-lg p-3 transition-all duration-200"
        [class.translate-x-80]="!showDatasetPanel"
        title="Toggle Dataset Panel">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
      </button>

      <!-- Map Container - Full width -->
      <div class="h-full w-full relative">
          <!-- No warehouses selected message -->
          <div *ngIf="timelineWarehouses.length === 0 && !loading" class="text-center py-12 px-6">
            <div class="max-w-sm mx-auto">
              <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center">
                <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-gray-900 mb-2">Chọn bưu cục để xem các tính năng Dataset</h4>
              <p class="text-sm text-gray-500 leading-relaxed">Hãy chọn các bưu cục trong timeline ở trên để xem các dataset khả dụng cho những bưu cục đó.</p>
              <div class="mt-6 flex justify-center">
                <div class="flex items-center gap-2 text-xs text-gray-400 bg-gray-50 px-3 py-2 rounded-full">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Chọn bưu cục từ danh sách bên trái
                </div>
              </div>
            </div>
          </div>

          <!-- Loading State -->
          <div *ngIf="loading" class="flex flex-col items-center justify-center py-12">
            <div class="relative">
              <div class="animate-spin rounded-full h-12 w-12 border-4 border-orange-200"></div>
              <div class="animate-spin rounded-full h-12 w-12 border-4 border-orange-500 border-t-transparent absolute top-0 left-0"></div>
            </div>
            <span class="mt-4 text-sm text-gray-600 font-medium">Đang tải danh sách dataset...</span>
            <div class="mt-2 w-32 h-1 bg-gray-200 rounded-full overflow-hidden">
              <div class="h-full bg-orange-500 rounded-full animate-pulse"></div>
            </div>
          </div>

          <!-- Error State -->
          <div *ngIf="error && !loading" class="bg-red-50 border border-red-200 rounded-xl p-6 mx-4 mb-4">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h4 class="text-sm font-semibold text-red-800 mb-1">Không thể tải dữ liệu</h4>
                <p class="text-sm text-red-700">{{ error }}</p>
                <button
                  (click)="loadDatasets()"
                  class="mt-3 inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium text-red-700 bg-red-100 hover:bg-red-200 rounded-lg transition-colors">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                  </svg>
                  Thử lại
                </button>
              </div>
            </div>
          </div>

          <!-- Dataset Grid -->
          <div *ngIf="!loading && !error" class="space-y-3">
            <!-- Empty State -->
            <div *ngIf="datasets.length === 0 && timelineWarehouses.length > 0" class="flex flex-col items-center justify-center py-12 px-6">
              <div class="max-w-sm mx-auto text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                  </svg>
                </div>
                <h4 class="text-base font-semibold text-gray-900 mb-2">Chưa có Data Product nào</h4>
                <p class="text-sm text-gray-500">Không tìm thấy dataset nào cho các bưu cục đã chọn trong timeline.</p>
              </div>
            </div>

            <!-- Dataset Cards -->
            <div *ngFor="let dataset of datasets; trackBy: trackByDatasetId"
                 (click)="viewDataset(dataset)"
                 class="group relative bg-white border-2 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden cursor-pointer transform hover:-translate-y-1 hover:scale-[1.02]"
                 [ngClass]="getTypeConfig(dataset.type).border">

              <!-- Gradient Background Overlay -->
              <div class="absolute inset-0 opacity-0 group-hover:opacity-5 transition-opacity duration-300"
                   [ngClass]="getTypeConfig(dataset.type).bgGradient"></div>

              <!-- Card Content -->
              <div class="relative p-4">
                <!-- Header Section -->
                <div class="flex items-start justify-between mb-3">
                  <div class="flex items-center gap-3 flex-1 min-w-0">
                    <!-- Icon with Background -->
                    <div class="flex-shrink-0 p-2.5 rounded-xl transition-all duration-300 group-hover:scale-110"
                         [ngClass]="getTypeConfig(dataset.type).bgLight">
                      <ng-container [ngSwitch]="dataset.type">
                        <!-- Truck Icon -->
                        <svg *ngSwitchCase="'truck'" class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
                        </svg>
                        <!-- Demand Icon -->
                        <svg *ngSwitchCase="'demand'" class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        <!-- Trip Icon -->
                        <svg *ngSwitchCase="'trip'" class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                        </svg>
                        <!-- Hub Icon -->
                        <svg *ngSwitchCase="'hub'" class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        <!-- Default Icon -->
                        <svg *ngSwitchDefault class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                        </svg>
                      </ng-container>
                    </div>

                    <!-- Title and Type -->
                    <div class="flex-1 min-w-0">
                      <h4 class="text-sm font-semibold text-gray-900 truncate group-hover:text-gray-800 transition-colors">
                        {{ dataset.name || 'Unnamed Dataset' }}
                      </h4>
                      <div class="flex items-center gap-2 mt-1">
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium"
                              [ngClass]="getTypeConfig(dataset.type).badge">
                          {{ getTypeConfig(dataset.type).label }}
                        </span>
                      </div>
                    </div>
                  </div>

                  <!-- Records Count -->
                  <div class="flex-shrink-0 text-right">
                    <div class="text-lg font-bold text-gray-900">
                      {{ dataset.records || 0 | number:'1.0-0' }}
                    </div>
                    <div class="text-xs text-gray-500">records</div>
                  </div>
                </div>

                <!-- Description -->
                <div class="text-xs text-gray-600 leading-relaxed line-clamp-2">
                  {{ dataset.description || 'Không có mô tả chi tiết cho dataset này.' }}
                </div>

                <!-- Action Indicator -->
                <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-100">
                  <div class="flex items-center gap-1 text-xs text-gray-500">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    Xem chi tiết
                  </div>
                  <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600 transition-colors transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Map Container - Full width -->
      <div class="h-full w-full relative">
        <!-- Dataset Content Overlay - Use existing DatasetDetailComponent -->
        <div *ngIf="selectedDatasetForMap" class="absolute inset-0 z-10 bg-white rounded-lg shadow-lg overflow-hidden pointer-events-none">
          <!-- Close Button Header - Allow pointer events -->
          <div class="flex items-center justify-between p-4 border-b border-gray-200 bg-gray-50 pointer-events-auto">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
              </svg>
              {{ selectedDatasetForMap.name || 'Chi tiết Dataset' }}
            </h3>
            <button
              (click)="closeDatasetView()"
              class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 text-gray-600 hover:text-gray-800 transition-colors"
              title="Đóng và quay lại bản đồ">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>

          <!-- Dataset Detail Content - Allow pointer events -->
          <div class="h-full overflow-y-auto pointer-events-auto">
            <app-dataset-detail
              *ngIf="selectedDatasetForMap"
              [attr.key]="datasetViewKey"
              [datasetId]="selectedDatasetForMap.id"
              [dataset]="selectedDatasetForMap"
              [embedded]="true">
            </app-dataset-detail>
          </div>
        </div>

        <!-- Map Container - Always visible and full -->
        <div class="w-full h-full rounded-lg overflow-hidden" [class.hidden]="selectedDatasetForMap">
          <!-- Loading state for map -->
          <div *ngIf="!mapLoaded" class="h-full flex items-center justify-center bg-gray-100 rounded-lg">
            <div class="text-center">
              <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-orange-500 mx-auto"></div>
              <span class="ml-3 text-gray-600">Đang tải bản đồ...</span>
            </div>
          </div>
          <!-- Full map - always visible -->
          <div #warehouseMap id="warehouseMap" class="w-full h-full rounded-lg" [class.hidden]="!mapLoaded"></div>
        </div>
      </div>
      <div *ngIf="selectedDatasetForMap" class="absolute inset-0 z-10 bg-white rounded-lg shadow-lg overflow-hidden pointer-events-none">
        <!-- Close Button Header - Allow pointer events -->
        <div class="flex items-center justify-between p-4 border-b border-gray-200 bg-gray-50 pointer-events-auto">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            {{ selectedDatasetForMap.name || 'Chi tiết Dataset' }}
          </h3>
          <button
            (click)="closeDatasetView()"
            class="flex items-center justify-center w-8 h-8 rounded-full bg-gray-200 hover:bg-gray-300 text-gray-600 hover:text-gray-800 transition-colors"
            title="Đóng và quay lại bản đồ">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        
        <!-- Dataset Detail Content - Allow pointer events -->
        <div class="h-full overflow-y-auto pointer-events-auto">
          <app-dataset-detail 
            *ngIf="selectedDatasetForMap"
            [attr.key]="datasetViewKey"
            [datasetId]="selectedDatasetForMap.id"
            [dataset]="selectedDatasetForMap"
            [embedded]="true">
          </app-dataset-detail>
        </div>
      </div>

      <!-- Map Container - Always visible and full -->
      <div class="w-full h-full rounded-lg overflow-hidden" [class.hidden]="selectedDatasetForMap">
        <!-- Loading state for map -->
        <div *ngIf="!mapLoaded" class="h-full flex items-center justify-center bg-gray-100 rounded-lg">
          <div class="text-center">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-orange-500 mx-auto"></div>
            <span class="ml-3 text-gray-600">Đang tải bản đồ...</span>
          </div>
        </div>
        <!-- Full map - always visible -->
        <div #warehouseMap id="warehouseMap" class="w-full h-full rounded-lg" [class.hidden]="!mapLoaded"></div>
      </div>
    </div>
  </div>
</div>

<!-- Demands Modal -->
<div *ngIf="showDemandsModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-[1000] p-4" (click)="closeDemandsModal()">
  <div class="bg-white rounded-lg shadow-xl max-w-6xl w-full max-h-[90vh] overflow-hidden" (click)="$event.stopPropagation()">
  <div class="bg-white rounded-lg shadow-xl max-w-6xl w-full max-h-[90vh] overflow-hidden">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <h3 class="text-xl font-semibold text-gray-900 flex items-center gap-2">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Dữ liệu Sản lượng Bưu cục
      </h3>
      <button (click)="closeDemandsModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Modal Content -->
    <div class="p-6 overflow-y-auto max-h-[calc(90vh-120px)]">
      <!-- Loading State -->
      <div *ngIf="loadingDemands" class="flex items-center justify-center py-8">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-purple-500"></div>
        <span class="ml-3 text-gray-600">Đang tải dữ liệu sản lượng...</span>
      </div>

      <!-- Error State -->
      <div *ngIf="demandsError && !loadingDemands" class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-red-700">{{ demandsError }}</span>
        </div>
      </div>

      <!-- Demands Data -->
      <div *ngIf="!loadingDemands && !demandsError && demandsData.length > 0">
        <div class="mb-4">
          <p class="text-sm text-gray-600">
            Hiển thị dữ liệu sản lượng cho {{ demandsData.length }} bưu cục từ {{ formatDateRange() }}
          </p>
        </div>

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-blue-600">Tổng Pickup</p>
                <p class="text-2xl font-bold text-blue-900">{{ formatNumber(getTotal('total_pick')) }}</p>
              </div>
              <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
              </svg>
            </div>
          </div>

          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-green-600">Tổng Delivery</p>
                <p class="text-2xl font-bold text-green-900">{{ formatNumber(getTotal('total_deliver')) }}</p>
              </div>
              <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3M3 17V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-yellow-600">Tổng COD</p>
                <p class="text-2xl font-bold text-yellow-900">{{ formatCurrency(getTotal('total_cod')) }}</p>
              </div>
              <svg class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
          </div>

          <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-purple-600">Ngày hoạt động</p>
                <p class="text-2xl font-bold text-purple-900">{{ getTotal('active_days') }}</p>
              </div>
              <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Detailed Table -->
        <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bưu cục</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pickup</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">COD</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trọng lượng</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thể tích</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày hoạt động</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr *ngFor="let demand of demandsData" class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {{ getWarehouseName(demand.warehouse_id) }}
                    <div class="text-xs text-gray-500">ID: {{ demand.warehouse_id }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="font-medium">{{ formatNumber(demand.total_pick) }}</div>
                    <div class="text-xs text-gray-500">TB/ngày: {{ formatNumber(demand.avg_pick_per_day) }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="font-medium">{{ formatNumber(demand.total_deliver) }}</div>
                    <div class="text-xs text-gray-500">TB/ngày: {{ formatNumber(demand.avg_deliver_per_day) }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div class="font-medium">{{ formatCurrency(demand.total_cod) }}</div>
                    <div class="text-xs text-red-500">Thất bại: {{ formatCurrency(demand.total_cod_failed) }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div>Pickup: {{ formatWeight(demand.total_pick_weight) }}</div>
                    <div class="text-xs text-gray-500">Deliver: {{ formatWeight(demand.total_deliver_weight) }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div>Pickup: {{ formatVolume(demand.total_pick_volume) }}</div>
                    <div class="text-xs text-gray-500">Deliver: {{ formatVolume(demand.total_deliver_volume) }}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {{ demand.active_days || 0 }} ngày
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Empty State -->
      <div *ngIf="!loadingDemands && !demandsError && demandsData.length === 0" class="text-center py-8">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <p class="text-gray-500">Không có dữ liệu sản lượng</p>
      </div>
    </div>
  </div>
</div>
