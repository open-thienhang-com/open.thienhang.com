            class="px-4 py-2 text-sm font-medium rounded-lg transition-all"
            [class.bg-primary]="previewView === 'timeline'"
            [class.text-white]="previewView === 'timeline'"
            [class.text-gray-600]="previewView !== 'timeline'"
            [class.hover:bg-gray-100]="previewView !== 'timeline'"
            [class.border]="previewView !== 'timeline'"
            [class.border-gray-200]="previewView !== 'timeline'">
            <span class="mr-1.5">üìä</span> Timeline
          </button>
          <button
            type="button"
            (click)="setPreviewView('table')"
            class="px-4 py-2 text-sm font-medium rounded-lg transition-all"
            [class.bg-primary]="previewView === 'table'"
            [class.text-white]="previewView === 'table'"
            [class.text-gray-600]="previewView !== 'table'"
            [class.hover:bg-gray-100]="previewView !== 'table'"
            [class.border]="previewView !== 'table'"
            [class.border-gray-200]="previewView !== 'table'">
            <span class="mr-1.5">üìã</span> B·∫£ng
          </button>
        </div>
      </div>
    </div>

    <!-- Shift Tabs -->
    <div id="shift-tabs-container" class="mb-4" *ngIf="shifts.length > 0">
      <div class="bg-gradient-to-r from-gray-100 to-gray-50 rounded-t-xl px-2 py-2">
        <nav id="shift-tabs" class="flex gap-2" aria-label="Shift Tabs">
          <button
            *ngFor="let shift of shifts; let i = index"
            (click)="switchToShift(i)"
            [class.active]="i === activeShiftIndex"
            class="px-4 py-2 text-sm font-medium rounded-lg transition-all"
            [class.bg-primary]="i === activeShiftIndex"
            [class.text-white]="i === activeShiftIndex"
            [class.text-gray-600]="i !== activeShiftIndex"
            [class.hover:bg-gray-200]="i !== activeShiftIndex">
            {{ shift.name }}
          </button>
        </nav>
      </div>
    </div>

    <div id="plan-preview-container" class="border border-gray-200 rounded-lg bg-white shadow-sm">
      <!-- Preview area: timeline view and table view -->
      <div id="preview-controls" class="mb-3 hidden">
        <!-- reserved for future controls -->
      </div>

      <div id="preview-timeline" class="p-6 space-y-6" *ngIf="previewView === 'timeline' && getActiveShift()">
        <div *ngFor="let vehicle of getActiveShift()?.vehicles || []" class="bg-gray-50 rounded-lg p-4">
          <div class="flex items-center justify-between mb-3">
            <h5 class="text-lg font-semibold text-gray-900">{{ vehicle.name }}</h5>
            <span class="text-sm text-gray-500">{{ vehicle.type }}</span>
          </div>
          <div class="space-y-2">
            <div *ngFor="let demand of vehicle.demands || []" class="flex justify-between items-center py-2 border-b border-gray-200 last:border-b-0">
              <div class="flex-1">
                <span class="font-medium text-gray-900">{{ demand.location }}</span>
                <span class="text-sm text-gray-500 ml-2">{{ demand.time_window }}</span>
              </div>
              <div class="text-right">
                <span class="text-sm font-medium text-gray-700">{{ formatKg(demand.weight) }}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div id="preview-table" class="p-6" *ngIf="previewView === 'table' && getActiveShift()">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ph∆∞∆°ng ti·ªán</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ƒêi·ªÉm giao</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Th·ªùi gian</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tr·ªçng l∆∞·ª£ng</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <ng-container *ngFor="let vehicle of getActiveShift()?.vehicles || []">
                <tr *ngFor="let demand of vehicle.demands || []; let isFirst = first; let demandIndex = index"
                    [class.border-t-2]="demandIndex === 0 && vehicle.demands && vehicle.demands.length > 1">
                  <td *ngIf="isFirst"
                      class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                      [attr.rowspan]="vehicle.demands.length || 1">
                    {{ vehicle.name }}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {{ demand.location }}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {{ demand.time_window }}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {{ formatKg(demand.weight) }}
                  </td>
                </tr>
              </ng-container>
            </tbody>
          </table>
        </div>
      </div>

      <div id="preview-empty" class="text-center py-16 text-gray-400" *ngIf="!plan">
        <svg class="w-16 h-16 mx-auto mb-4 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        <p class="text-base font-medium text-gray-500">Ch∆∞a ch·ªçn plan</p>
        <p class="text-sm text-gray-400 mt-2">Ch·ªçn ho·∫∑c upload plan ƒë·ªÉ xem preview</p>
      </div>
    </div>
  </div>

  <!-- Trip Overview Cards -->
