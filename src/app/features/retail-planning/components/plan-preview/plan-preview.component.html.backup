  <!-- PREVIEW Section -->
  <div class="border-t-2 border-gray-200 pt-6 mb-6">
    <div class="bg-gradient-to-r from-gray-50 to-white border border-gray-200 rounded-lg p-4 mb-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center text-xl">
            üëÅÔ∏è
          </div>
          <div>
            <h4 class="text-lg font-bold text-gray-900">Xem tr∆∞·ªõc</h4>
            <p class="text-xs text-gray-500 mt-0.5">Xem tr∆∞·ªõc chi ti·∫øt l·ªãch t·∫£i</p>
